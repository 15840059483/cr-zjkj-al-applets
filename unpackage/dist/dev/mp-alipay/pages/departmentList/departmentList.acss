.input-div {
  padding: .3rem;
}
.input-div .el-input__inner {
  color: #b4b4b4;
}
.list-item {
  background-color: #ffffff;
  padding: .2rem .8rem;
  border-bottom: 1px solid #eeeeee;
}
.no-list {
  margin-top: 1rem;
}
.no-list ._div {
  width: 2rem;
  height: 2rem;
  margin: 0 auto;
  border-radius: 50%;
  background-color: #b8b8b8;
  text-align: center;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.no-list ._div ._img {
  width: 60%;
  height: 60%;
}
.no-list ._p {
  text-align: center;
  margin-top: .2rem;
  color: #4d4d4d;
  font-size: .35rem;
  letter-spacing: 1px;
}

